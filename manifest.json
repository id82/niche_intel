{
   "manifest_version":3,
   "name":"NicheIntel Pro by Adigy",
   "version":"1.2.3",
   "description":"Performs Amazon Search Page analysis and deep-dives on all book search pages.",
   "permissions":[
      "activeTab",
      "scripting",
      "storage",
      "tabs",
      "windows",
      "declarativeNetRequest",
      "offscreen"
   ],
   "incognito":"split",
   "icons":{
      "16":"icons/icon16.png",
      "32":"icons/icon32.png",
      "48":"icons/icon48.png",
      "128":"icons/icon128.png"
   },
   "host_permissions":[
      "*://*.amazon.com/*",
      "*://*.amazon.co.uk/*",
      "*://*.amazon.de/*",
      "*://*.amazon.fr/*",
      "*://*.amazon.it/*",
      "*://*.amazon.es/*",
      "*://*.amazon.nl/*",
      "*://*.amazon.com.au/*",
      "*://*.amazon.co.jp/*",
      "*://*.amazon.pl/*",
      "*://*.amazon.se/*"
   ],
   "background":{
      "service_worker":"background.js"
   },
   "action":{
   },
   "content_scripts":[
      {
         "matches":[
            "*://*.amazon.com/*",
            "*://*.amazon.co.uk/*",
            "*://*.amazon.de/*",
            "*://*.amazon.fr/*",
            "*://*.amazon.it/*",
            "*://*.amazon.es/*",
            "*://*.amazon.nl/*",
            "*://*.amazon.com.au/*",
            "*://*.amazon.co.jp/*",
            "*://*.amazon.pl/*",
            "*://*.amazon.se/*"
         ],
         "js":[
            "book_page_info.js"
         ],
         "run_at":"document_end"
      }
   ],
   "web_accessible_resources":[
      {
         "resources":[
            "report.html",
            "report.js",
            "report.css",
            "icons/icon16.png",
            "icons/icon32.png"
         ],
         "matches":[
            "<all_urls>"
         ]
      }
   ]
}