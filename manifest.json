{
  "manifest_version": 3,
  "name": "Amazon SERP Deep-Dive (Functional Test)",
  "version": "1.70",
  "description": "Performs SERP analysis and deep-dives on the first 10 products for testing.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "windows"
  ],
  "incognito": "split",
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.pl/*",
    "*://*.amazon.se/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/dp/*",
        "*://*.amazon.co.uk/dp/*",
        "*://*.amazon.de/dp/*",
        "*://*.amazon.fr/dp/*",
        "*://*.amazon.it/dp/*",
        "*://*.amazon.es/dp/*",
        "*://*.amazon.nl/dp/*",
        "*://*.amazon.com.au/dp/*",
        "*://*.amazon.co.jp/dp/*",
        "*://*.amazon.pl/dp/*",
        "*://*.amazon.se/dp/*"
      ],
      "js": ["book_page_info.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["report.html", "report.js", "report.css", "icons/icon32.png"],
      "matches": ["<all_urls>"]
    }
  ]
}